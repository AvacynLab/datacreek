# Example environment variables for Datacreek
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
# Persist database under /app/data within the container
DATABASE_URL=sqlite:////app/data/datacreek.db
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j
# Port the Flask backend listens on
PORT=5000
# Example secrets (override in production)
SECRET_KEY=change-me
API_KEY=change-me

# Container image names for deployment
IMAGE_NAME=ghcr.io/yourorg/datacreek
FRONTEND_IMAGE_NAME=ghcr.io/yourorg/datacreek-frontend
# FastAPI host and debug mode
HOST=0.0.0.0
DEBUG=false

# Deployment settings used by scripts/deploy.sh
DEPLOY_HOST=example.com
DEPLOY_USER=ubuntu
DEPLOY_PATH=/opt/datacreek
DEPLOY_KEY=~/.ssh/id_rsa
LOCAL_BUILD=false

# Dataset persistence options
DATASET_MAX_VERSIONS=5
DATACREEK_REQUIRE_PERSISTENCE=1
DATACREEK_UPLOAD_DIR=/tmp/uploads
SDK_DEBUG=0
SDK_VERBOSE=false
SDK_BATCH_SIZE=
LLM_PROVIDER=
LLM_API_BASE=
LLM_MODEL=
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0
API_ENDPOINT_KEY=
DATACREEK_CONFIG=config.yaml
DATACREEK_PIPELINES_CONFIG=pipelines.yaml
REDIS_HOST=localhost
REDIS_PORT=6379
S3_BUCKET=
S3_PREFIX=
S3_ENDPOINT_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
USE_REDIS_GRAPH=0
NEO4J_INIT_INDEXES=1

